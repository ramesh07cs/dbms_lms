# Secret keys
SECRET_KEY=super-secret-key-production
JWT_SECRET_KEY=jwt-production-key

# Database URL
# SQLite (optional)
# DATABASE_URL=sqlite:///lms.db

# PostgreSQL
DATABASE_URL=your_database_url_here
JWT_ACCESS_TOKEN_EXPIRES=3600        # in seconds (1 hour)
JWT_REFRESH_TOKEN_EXPIRES_DAYS=30    # refresh token expires in 30 days

# Default admin account (used by init_database.py). Change these before first run.
# If not set, sensible defaults will be used (email: admin@gmail.com, password: admin123)
ADMIN_EMAIL=admin@gmail.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=Administrator
